@model Cart

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class="card shadow-lg border-0 mt-4">
        <div class="card-header bg-dark text-white py-4 text-center">
            <h2 class="text-uppercase mb-1">@Model.Product.Name</h2>
            <p class="text-white-50 mb-0">Mã sản phẩm: @Model.Product.Id</p>
        </div>

        <div class="card-body px-5 pb-5">
            <div class="row g-4">
                <!-- Cột ảnh -->
                <div class="col-lg-6 d-flex justify-content-center">
                    @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Any())
                    {
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @foreach (var itemIndex in Model.Product.ProductImages
                                                            .Select((img, i) => new { ProductImage = img, Index = i }))
                                {
                                    <button type="button"
                                            data-bs-target="#carouselExampleIndicators"
                                            data-bs-slide-to="@itemIndex.Index"
                                            class="@(itemIndex.Index == 0 ? "active" : "")"
                                            aria-current="@(itemIndex.Index == 0 ? "true" : "false")"
                                            aria-label="Slide @(itemIndex.Index + 1)">
                                    </button>
                                }
                            </div>

                            <div class="carousel-inner">
                                @foreach (var itemIndex in Model.Product.ProductImages
                                                            .Select((img, i) => new { Image = img, Index = i }))
                                {
                                    <div class="@(itemIndex.Index == 0 ? "carousel-item active" : "carousel-item")">
                                        <div class="carousel-item @(itemIndex.Index == 0 ? "active" : "") d-flex justify-content-center align-items-center" style="height:500px; background:#f8f9fa;">
                                            <img src="@itemIndex.Image.ImageUrl"
                                                 class="rounded shadow-sm"
                                                 alt="@Model.Product.Name"
                                                 style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                                        </div>
                                    </div>
                                }
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                        </div>
                    }
                    else
                    {
                        <img src="~/img/logo.png" alt="@Model.Product.Name"
                             class="img-fluid rounded shadow-sm border border-2"
                             style="max-height: 500px;" />
                    }
                </div>


                <!-- Cột thông tin -->
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Màu sắc:</label>
                        <div>
  
                            <span class="d-inline-block rounded-circle border"
                                  style="width: 24px; height: 24px; background-color: @Model.Product.Color;">
                            </span>
                            <span class="ms-2 align-middle">@Model.Product.Color</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Kích cỡ:</label>
                        <div>
                            <span class="badge bg-primary fs-6 px-3 py-2">@Model.Product.Size</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Chất liệu:</label>
                        <div>
                            <span class="badge bg-success fs-6 px-3 py-2">@Model.Product.Material</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả:</label>
                        <div class="p-3 border rounded bg-light">@Model.Product.Description</div>
                    </div>
                    <div class="mb-3">
                        <label for="Count"class="form-label fw-bold">Số lượng:</label>
                        <input asp-for="Count" type="number"  value="1" min="1" class="form-control w-50" />
                    </div>

                    
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="margin-right: 50px;">
                        <i class="bi bi-arrow-left"></i> Quay trở lại
                    </a>

                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-cart3"></i> Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>
        
    </div>
</form>
<div class="row product-detail-bottom mt-5">
    <div class="col-lg-12">
        <ul class="nav nav-pills nav-justified">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="pill" href="#reviews">Bình luận sản phẩm</a>
            </li>
        </ul>
        <div class="tab-content pt-3">
            <div id="reviews" class="tab-pane fade show active">
                <h4 class="mb-4">Đánh giá & Bình luận</h4>

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Review" asp-action="PostReview" method="post">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />

                        <div class="mb-2">
                            <label for="rating" class="form-label fw-bold">Đánh giá:</label>
                            <select name="rating" class="form-select w-auto">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <option value="@i">@i ⭐</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <textarea name="comment" class="form-control" placeholder="Nhập bình luận..." rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                    </form>
                }
                else
                {
                    <p><a asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a> để bình luận.</p>
                }

                <!-- Danh sách bình luận -->
                <div class="reviews-list mt-4">
                    @if (Model.Product.Reviews != null && Model.Product.Reviews.Any())
                    {
                        @foreach (var review in Model.Product.Reviews.OrderByDescending(r => r.CreatedAt))
                        {
                            <div class="border rounded p-3 mb-3 bg-light">
                                <strong>@review.User?.UserName</strong>
                                <span class="text-warning">@string.Concat(Enumerable.Repeat("★", review.Rating))</span>
                                <p class="mb-1">@review.Comment</p>
                                <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Chưa có đánh giá nào cho sản phẩm này.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .carousel-item img {
        transition: transform 0.6s ease, opacity 0.6s ease;
    }

    .carousel-item.active img {
        transform: scale(1.02);
    }
</style>

<style>
    #searchResults {
        width: 300px;
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #ccc;
        background: white;
        z-index: 1000;
    }

        #searchResults div {
            padding: 8px;
            cursor: pointer;
        }

            #searchResults div:hover {
                background-color: #f0f0f0;
            }

</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        let debounceTimer;
        $("#productSearch").on("input", function () {
            clearTimeout(debounceTimer);
            let query = $(this).val().trim();

            if (query.length < 1) {
                $("#searchResults").hide();
                return;
            }

            debounceTimer = setTimeout(function () {
                $.ajax({
                    url: '/Customer/Product/SearchProduct', // API lấy sản phẩm theo từ khóa
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        let html = '';

                        if (!data || data.length === 0) {
                            html = '<div>Không tìm thấy sản phẩm</div>';
                        } else {
                            data.forEach(function (product) {
                                html += `<div data-id="${product.id}">${product.name}</div>`;
                            });
                        }

                        $("#searchResults").html(html).show();
                    },
                    error: function () {
                        $("#searchResults").html('<div>Lỗi khi tìm kiếm</div>').show();
                    }
                });
            }, 300); // debounce 300ms
        });

        // Khi click vào 1 sản phẩm
        $("#searchResults").on("click", "div", function () {
            let selectedName = $(this).text();
            let selectedId = $(this).data("id");

            $("#productSearch").val(selectedName);
            $("#searchResults").hide();

            // Chuyển sang trang chi tiết sản phẩm (nếu muốn)
            // window.location.href = '/Product/Details?productId=' + selectedId;
        });

        // Ẩn dropdown khi click ra ngoài
        $(document).click(function (e) {
            if (!$(e.target).closest("#productSearch, #searchResults").length) {
                $("#searchResults").hide();
            }
        });

        document.querySelectorAll('.flash-countdown').forEach(div => {
        const expiry = parseInt(div.dataset.expiry);
        if (!expiry) return;

        function updateCountdown() {
            const now = Date.now();
            let diff = expiry - now;
            if (diff <= 0) {
                div.innerText = "FLASH SALE HẾT";
                return;
            }
            const h = Math.floor(diff / 1000 / 3600);
            const m = Math.floor(diff / 1000 / 60) % 60;
            const s = Math.floor(diff / 1000) % 60;
            div.innerText = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    });

    });
</script>

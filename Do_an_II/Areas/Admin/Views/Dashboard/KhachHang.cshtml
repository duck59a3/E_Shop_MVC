@model CustomerReportVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
}

<div class="dashboard-banner mb-4 text-center text-white d-flex align-items-center justify-content-center">
    <h2 class="m-0">Báo cáo khách hàng</h2>
</div>
<div class="row mb-4 text-center">
    <div class="row mb-4">
        @* <div class="col-md-6 mb-4">
            <canvas id="customerChart"></canvas>
        </div> *@
        <div class="col-md-6 mb-4">
            <canvas id="ordersChart"></canvas>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-4">
            <canvas id="paretoChart"></canvas>
        </div>
        <div class="col-md-6 mb-4">
            <canvas id="categoryRevenueChart"></canvas>
        </div>
    </div>
    <!-- Button xuất PDF -->
    <div class="text-center mb-5">
        <button id="exportFullPdfBtn" class="btn btn-success">Xuất PDF</button>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    
    // 2. Tổng số đơn hàng theo khách hàng
    var ordersData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.OrdersPerCustomer));
    new Chart(document.getElementById('ordersChart'), {
        type: 'bar',
        data: {
            labels: ordersData.map(x => x.Name),
            datasets: [{
                label: 'Tổng số đơn hàng',
                data: ordersData.map(x => x.TotalOrders),
                backgroundColor: 'rgba(255, 99, 132, 0.6)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: { y: { beginAtZero: true } }
        }
    });

    // 3. Pareto 80/20 khách hàng
    var paretoLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ParetoLabels));
    var paretoRevenue = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ParetoRevenue));
    var paretoCumulativePercent = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ParetoCumulativePercent));

    new Chart(document.getElementById('paretoChart'), {
        data: {
            labels: paretoLabels,
            datasets: [
                {
                    type: 'bar',
                    label: 'Doanh thu',
                    data: paretoRevenue,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                },
                {
                    type: 'line',
                    label: 'Tỷ lệ tích lũy (%)',
                    data: paretoCumulativePercent,
                    borderColor: 'rgba(255, 159, 64, 1)',
                    borderWidth: 2,
                    fill: false,
                    yAxisID: 'y1'
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                y: { beginAtZero: true },
                y1: {
                    type: 'linear',
                    position: 'right',
                    ticks: { max: 100, min: 0 },
                    title: { display: true, text: 'Tỷ lệ tích lũy (%)' }
                }
            }
        }
    });
</script>








<style>
    .dashboard-banner {
        width: 100%;
        height: 120px; /* độ cao banner */
        background: linear-gradient(90deg, #4e73df, #1cc88a); /* gradient đẹp */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        font-size: 2rem;
    }
</style>
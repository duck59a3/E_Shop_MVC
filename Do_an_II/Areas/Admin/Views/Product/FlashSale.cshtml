@model FlashSaleVM

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Flash Sale - @Model.ProductName</h3>

<form asp-action="FlashSale" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label class="form-label">Giá Flash Sale</label>
        <input asp-for="FlashPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Thời gian (phút)</label>
        <input asp-for="DurationMinutes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger">
        Bật Flash Sale
    </button>

    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
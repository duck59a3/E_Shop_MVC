@model ProductVM

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h2 class="mb-4">@(Model.Product.Id != 0 ?"Cập nhật sản phẩm":"Thêm sản phẩm") </h2>
        <form method="post" enctype="multipart/form-data">
            <input  asp-for="Product.Id" hidden/>

            <div class="row">
                <div class="col-6">


                    <div class="mb-3">
                        <label asp-for="Product.Name" class="form-label">Tên sản phẩm</label>
                        <input asp-for="Product.Name" class="form-control" placeholder="Nhập tên sản phẩm">
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Description" class="form-label">Mô tả</label>
                        <input asp-for="Product.Description" class="form-control" placeholder="Nhập mô tả">
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Price" class="form-label">Giá</label>
                        <input asp-for="Product.Price" class="form-control" placeholder="Nhập giá">
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Quantity" class="form-label">Số lượng</label>
                        <input asp-for="Product.Quantity" class="form-control" placeholder="Nhập số lượng">
                        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Size" class="form-label">Kích cỡ</label>
                        <input asp-for="Product.Size" class="form-control" placeholder="Nhập kích cỡ">
                        <span asp-validation-for="Product.Size" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Color" class="form-label">Màu sắc</label>>
                        <input asp-for="Product.Color" class="form-control" placeholder="Nhập màu sắc">
                        <span asp-validation-for="Product.Color" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.Material" class="form-label">Chất liệu</label>
                        <input asp-for="Product.Material" class="form-control" placeholder="Chất liệu">
                        <span asp-validation-for="Product.Material" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.CategoryId" class="form-label">Loại sản phẩm</label>
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-label">
                            Loại sản phẩm
                            <option disabled selected value="">Chọn loại sản phẩm</option>

                        </select>

                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.ProductImages" class="form-label">Hình ảnh</label>
                        <input type="file" name="files" class="form-control" placeholder="Hình ảnh" multiple>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if(Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            }
                            else {
                            <button type="submit" class="btn btn-primary">Thêm </button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Trở lại </a>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @if (Model.Product.ProductImages != null)
                    {
                        foreach (var item in Model.Product.ProductImages)
                        {
                            <div class="border p-1 m-2 text-center" style="max-width: 600px; margin: auto;">
                                <img src="@item.ImageUrl" width="100%"
                                     style="border-radius:20px;border:1px solid #bbb9b9" />
                                <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@item.Id">
                                    <i class="bi bi-trash-fill"></i>Xóa hình ảnh
                                </a>
                            </div>
                        }
                    }                  
                </div>
            </div>
        </form>
    </div>
</div>

